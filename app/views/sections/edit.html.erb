<h1>Edit <%= @section.name %></h1>

<% if @section.errors.any? %>
  <h3>These are your errors. FIX THEM!</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sections/<%= @section.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="section_name">Section Name</label>
  <input id="section_name" name="section[name]" type="text" value="<%= @section.name %>">
  <label for='section_num'>Section Number</label>
  <input id='section_num' name='section[section_number]' type='text' value="<%= @section.section_number %>">
  <p><button>Add Section</button>
<form>
